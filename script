-- Создание ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Создание основного фрейма
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 400)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- Создание заголовка
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
title.Text = "Настройки игры"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Parent = mainFrame

-- Создание кнопки для ночного режима
local nightModeButton = Instance.new("TextButton")
nightModeButton.Size = UDim2.new(0, 200, 0, 50)
nightModeButton.Position = UDim2.new(0.5, -100, 0, 70)
nightModeButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
nightModeButton.Text = "Включить ночной режим"
nightModeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
nightModeButton.TextScaled = true
nightModeButton.Parent = mainFrame

-- Функция для включения ночного режима
local function toggleNightMode()
    local lighting = game:GetService("Lighting")
    if lighting.Brightness > 0 then
        lighting.Brightness = 0
        lighting.ClockTime = 0
    else
        lighting.Brightness = 1
        lighting.ClockTime = 12
    end
end

nightModeButton.MouseButton1Click:Connect(toggleNightMode)

-- Добавление других настроек (например, скорость, высота прыжка и т.д.)
-- Вы можете добавить больше элементов управления и функций по аналогии
