local Library = loadstring(game:HttpGetAsync("https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"))()
local SaveManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/SaveManager.luau"))()
local InterfaceManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/InterfaceManager.luau"))()

local Window = Library:CreateWindow{
    Title = `Fluent {Library.Version}`,
    SubTitle = "by Actual Master Oogway",
    TabWidth = 160,
    Size = UDim2.fromOffset(830, 525),
    Resize = true,
    MinSize = Vector2.new(470, 380),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl
}

local Tabs = {
    Main = Window:CreateTab{
        Title = "Main",
        Icon = "phosphor-users-bold"
    },
    Settings = Window:CreateTab{
        Title = "Settings",
        Icon = "settings"
    },
    Visuals = Window:CreateTab{
        Title = "Visuals",
        Icon = "eye"
    }
}

local Options = Library.Options

-- Вкладка Main: Добавим кнопку для примера
Tabs.Main:CreateButton{
    Title = "Test Button",
    Description = "This is a test button in the Main tab.",
    Callback = function()
        Library:Notify{
            Title = "Main Tab",
            Content = "You clicked the test button!",
            Duration = 3
        }
    end
}

-- Вкладка Visuals: Переключатель Keybinds
local KeybindsToggle = Tabs.Visuals:CreateToggle("KeybindsToggle", {
    Title = "Keybinds",
    Default = false,
    Callback = function(Value)
        if Value then
            Library:Notify{
                Title = "Keybinds",
                Content = "Keybinds are now visible.",
                Duration = 3
            }
        else
            Library:Notify{
                Title = "Keybinds",
                Content = "Keybinds are now hidden.",
                Duration = 3
            }
        end
    end
})

-- Addons:
SaveManager:SetLibrary(Library)
InterfaceManager:SetLibrary(Library)
SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes{}
InterfaceManager:SetFolder("FluentScriptHub")
SaveManager:SetFolder("FluentScriptHub/specific-game")
InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)

Library:Notify{
    Title = "Fluent",
    Content = "The script has been loaded.",
    Duration = 8
}

SaveManager:LoadAutoloadConfig()
