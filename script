local Library = loadstring(game:HttpGetAsync("https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"))()
local SaveManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/SaveManager.luau"))()
local InterfaceManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/InterfaceManager.luau"))()

local Window = Library:CreateWindow{
    Title = `Fluent {Library.Version}`,
    SubTitle = "by Actual Master Oogway",
    TabWidth = 160,
    Size = UDim2.fromOffset(830, 525),
    Resize = true,
    MinSize = Vector2.new(470, 380),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl
}

local Tabs = {
    Main = Window:CreateTab{
        Title = "Main",
        Icon = "phosphor-users-bold"
    },
    Settings = Window:CreateTab{
        Title = "Settings",
        Icon = "settings"
    }
}

local Options = Library.Options

-- Watermark
local watermarkFrame = Instance.new("Frame")
watermarkFrame.Size = UDim2.new(0, 300, 0, 30)
watermarkFrame.Position = UDim2.new(0.1, 0, 0.05, 0)
watermarkFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
watermarkFrame.BorderSizePixel = 0
watermarkFrame.Visible = true
watermarkFrame.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local watermarkText = Instance.new("TextLabel")
watermarkText.Text = "NL | About137 | Best Hvt Community Config | 40 ms"
watermarkText.Size = UDim2.new(1, 0, 1, 0)
watermarkText.Position = UDim2.new(0, 0, 0, 0)
watermarkText.BackgroundTransparency = 1
watermarkText.TextColor3 = Color3.fromRGB(255, 255, 255)
watermarkText.Font = Enum.Font.SourceSansBold
watermarkText.TextSize = 16
watermarkText.TextXAlignment = Enum.TextXAlignment.Left
watermarkText.TextYAlignment = Enum.TextYAlignment.Center
watermarkText.Parent = watermarkFrame

local function updateWatermark()
    local ping = math.random(30, 50)
    watermarkText.Text = string.format("NL | About137 | Best Hvt Community Config | %d ms", ping)
end

spawn(function()
    while true do
        updateWatermark()
        wait(1)
    end
end)

-- Keybinds
local keybindsFrame = Instance.new("Frame")
keybindsFrame.Size = UDim2.new(0, 200, 0, 150)
keybindsFrame.Position = UDim2.new(0.5, -100, 0.5, -75)
keybindsFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
keybindsFrame.BorderSizePixel = 0
keybindsFrame.Visible = false
keybindsFrame.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local keybindsTitle = Instance.new("TextLabel")
keybindsTitle.Text = "Keybinds"
keybindsTitle.Size = UDim2.new(1, 0, 0, 30)
keybindsTitle.Position = UDim2.new(0, 0, 0, 0)
keybindsTitle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
keybindsTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
keybindsTitle.Font = Enum.Font.SourceSansBold
keybindsTitle.TextSize = 18
keybindsTitle.Parent = keybindsFrame

local keybindsList = Instance.new("TextLabel")
keybindsList.Text = "[Keybind] Fly - F\n[Keybind] Noclip - N\n[Keybind] Speed Boost - LeftShift"
keybindsList.Size = UDim2.new(1, -10, 1, -40)
keybindsList.Position = UDim2.new(0, 5, 0, 35)
keybindsList.BackgroundTransparency = 1
keybindsList.TextColor3 = Color3.fromRGB(255, 255, 255)
keybindsList.Font = Enum.Font.SourceSans
keybindsList.TextSize = 16
keybindsList.TextXAlignment = Enum.TextXAlignment.Left
keybindsList.TextYAlignment = Enum.TextYAlignment.Top
keybindsList.Parent = keybindsFrame

local keybindsEnabled = false
local toggleKeybind = Enum.KeyCode.K

game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == toggleKeybind then
        keybindsEnabled = not keybindsEnabled
        keybindsFrame.Visible = keybindsEnabled
    end
end)

-- ESP
local espEnabled = false
local espToggle = Tabs.Main:CreateToggle("ESP", {
    Title = "Enable ESP",
    Default = false,
    Callback = function(Value)
        espEnabled = Value
    end
})

local function createESP(player)
    local character = player.Character
    if not character then return end

    local highlight = Instance.new("Highlight")
    highlight.FillTransparency = 0.5
    highlight.OutlineTransparency = 0
    highlight.FillColor = Color3.new(1, 0, 0)
    highlight.OutlineColor = Color3.new(1, 1, 1)
    highlight.Parent = character
end

local function removeESP(player)
    local character = player.Character
    if not character then return end

    for _, child in pairs(character:GetChildren()) do
        if child:IsA("Highlight") then
            child:Destroy()
        end
    end
end

game:GetService("RunService").RenderStepped:Connect(function()
    if espEnabled then
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer then
                createESP(player)
            end
        end
    else
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer then
                removeESP(player)
            end
        end
    end
end)

-- Addons:
SaveManager:SetLibrary(Library)
InterfaceManager:SetLibrary(Library)
SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes{}
InterfaceManager:SetFolder("FluentScriptHub")
SaveManager:SetFolder("FluentScriptHub/specific-game")
InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)

Library:Notify{
    Title = "Fluent",
    Content = "The script has been loaded.",
    Duration = 8
}

SaveManager:LoadAutoloadConfig()
